<div class="main-container-space-show">
  <div id="map" style="width: 500px; height: 400px;"></div>
  <h3>Title: <%= @space.title %></h3>
  <h4>Type: <%= @space.type_of_space %></h4>
  <h4>Space Capacity: <%= @space.space_capacity %></h4>
  <h4>Dimensions: <%= @space.space_dimensions %> m2</h4>
  <h4>Description</h4>
  <h4><%= @space.description %></h4>
  <br>
  <h4>Availability</h4>
  <% Search::WEEK_DAYS.each_with_index do |week_day, index| %>
    <h5><%= "#{week_day} --> #{@space_availability[index]}" %></h5>
  <% end %>
</div>

<% content_for :javascript_includes do %>
  <%= javascript_include_tag "show-map.js" %>
<% end %>

<% content_for :view_specific_css do %>  
  <%= stylesheet_link_tag "_header" %>
  <%= stylesheet_link_tag "_space-show" %>
  <%= stylesheet_link_tag "_home-footer" %> 
<% end %>

