<div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login-form pagination-centered"}) do |f| %>
    <%= f.email_field :email, autofocus: true, class: "login-item", placeholder: "Email", required: true  %>
    <%= f.password_field :password, autocomplete: "off", class: "login-item", placeholder: "Password", required: true %>
    <% if devise_mapping.rememberable? -%>
      <div class="login-item">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <%= f.submit "Log in", class: "login-item btn-primary btn-sm" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  <% end %>

</div>