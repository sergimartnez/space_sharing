<div>
<!-- 	<% if flash[:alert] %> 
	  <%= flash[:alert] %> 
	<% end %> -->
	
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "register-form pagination-centered"}) do |f| %>
	  <%= devise_error_messages! %>
	  <%= f.text_field :name, autofocus: true, class: "register-item", placeholder: "Name", required: true %>
		<%= f.text_field :surname, autofocus: true, class: "register-item", placeholder: "Surname", required: true %>
	  <%= f.email_field :email, autofocus: true, class: "register-item", placeholder: "Email", required: true %>

	  <% if @minimum_password_length %>
	    <em>(<%= @minimum_password_length %> characters minimum)</em>
	  <% end %>

	  <%= f.password_field :password, autocomplete: "off", class: "register-item", placeholder: "Password", required: true %>
		<%= f.password_field :password_confirmation, autocomplete: "off", class: "register-item", placeholder: "Repeat Password", required: true %>
		<%= link_to("Terms of service", url: "#", class: "register-item") %>
		<div class="register-item">
			<%= check_box("post", "validated", required: true) %>
			I accept this evil terms of Service
		</div>
		<%= f.submit "Sign up", class: "register-item btn-primary btn-sm" %>
	<% end %>	
</div>